            }
            """
        )
        button1.clicked.connect(lambda: self.go_temp(self.middle_widget))

        button2 = QPushButton("Pressure")
        button2.setFixedSize(130,130)
        button2.setStyleSheet("""
            QPushButton {
                background-color:#172B4D ;
